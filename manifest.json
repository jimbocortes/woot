{
  "name": "Woot",
  "version": "1.0",
  "description": "A screen recorder tool",
  "permissions": ["storage"],
  "background": {
    "scripts": ["./src/background/ScreenRecorder.js", "./src/background/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "./images/a_icon16.png",
      "32": "./images/a_icon32.png",
      "48": "./images/a_icon48.png",
      "128": "./images/a_icon128.png"
    },
    "default_title": "Woot",
    "default_popup": "./src/popup.html"
  },
  "options_page": "./src/options/options.html",
  "manifest_version": 2
}
